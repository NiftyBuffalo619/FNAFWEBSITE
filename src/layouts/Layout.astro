---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" type="text/css" href="https://use.typekit.net/rcr1opg.css" />
		<title>{title}</title>
	</head>
	<body class="bg-slate-950">
		<slot />
	</body>
	<footer class="p-16">
		<div class="relative flex py-5 items-center">
			<div class="flex-grow border-t bg-white"></div>
		</div>
		<div class="flex flex-center items-center flex-col space-y-4">
			<div>
				<p class="text-white p-25 text-center" style="font-family: 'sofia-pro';">Found an issue? Let me know on 
					<a href="https://github.com/NiftyBuffalo619/FNAFWEBSITE" class="text-blue-500">Github</a>.</p>
			</div>
			<div>
				<p class="text-white"></p>
				<p class="text-white p-25">Helpful links</p>
			</div>
		</div>
	</footer>
</html>